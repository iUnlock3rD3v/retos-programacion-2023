#IDETIFICA UN PENTAGRAMA
def es_pentagrama(palabra):
    return len(palabra) == 5
#IDETIFICA UN HETEROGRAMA
def es_heterograma(palabra):
    letras = set(palabra)
    return len(palabra) == len(letras)
#IDETIFICA UN ISOGRAMA
def es_isograma(palabra):
    letras = {}
    for letra in palabra:
        if letra in letras:
            letras[letra] += 1
        else:
            letras[letra] = 1
    for valor in letras.values():
        if valor > 1:
            return False
    return True

while True:
    #INTRODUCE LA PALABRA A IDETIFICAR
    palabra = input("Ingresa una palabra: \n")

    if es_isograma(palabra):
        print("\nLa palabra es un isograma\n")
    else:
        print("La palabra no es un isograma\n")

    if es_pentagrama(palabra):
        print("La palabra es un pentagrama\n")
    else:
        print("La palabra no es un pentagrama\n")
    if es_heterograma(palabra):
        print("La palabra es un heterograma\n")
    else:
        print("La palabra no es un heterograma\n")
